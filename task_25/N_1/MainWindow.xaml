<Window x:Class="N_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:N_1"
        mc:Ignorable="d"
        Title="Приложение Hello Name" Height="250" Width="436">
    <Grid Margin="0,10,12,0">
        <Button x:Name="button1" Content="Сказать Имя" HorizontalAlignment="Left" Margin="33,110,0,0" VerticalAlignment="Top" Width="88" Height="41" RenderTransformOrigin="0.489,0.537" Click="Button_Click"/>
        <Button x:Name="button2" Content="Закрыть" HorizontalAlignment="Left" Margin="316,110,0,0" VerticalAlignment="Top" Width="88" Height="41" Click="Button2_Click"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" Margin="155,110,0,0" TextWrapping="Wrap" Text="Введите имя" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label1" Content="Hello World" HorizontalAlignment="Left" Margin="127,65,0,0" VerticalAlignment="Top" Width="165"/>
        <Button x:Name="button3" Content="Спавка" HorizontalAlignment="Left" Margin="272,10,0,0" VerticalAlignment="Top" Width="88" Height="41" Click="Button3_Click"/>

    </Grid>
</Window>
